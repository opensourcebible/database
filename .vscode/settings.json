{
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.trimFinalNewlines": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "files.exclude": {
    "**/.idea": true,
    "**/.mypy_cache": true,
  },

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Darcula",
  "workbench.tree.indent": 15,

  "explorer.compactFolders": false,
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": "focusNoScroll",
  "explorer.incrementalNaming": "smart",

  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.fontFamily": "'Jetbrains Mono', 'Fira Code', 'Consolas', 'Courier New', 'monospace'",
  "editor.fontSize": 15,
  "editor.lineHeight": 1.3,
  "editor.showFoldingControls": "always",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "search.exclude": {
    "**/.venv/**": true,
  },

  "workbench.startupEditor": "readme",

  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "off",
  "debug.toolBarLocation": "docked",
  "debug.showInStatusBar": "never",

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "json.maxItemsComputed": 25000,

  "python.envFile": "${workspaceFolder}/.env",

  "python.analysis.typeCheckingMode": "off",
  "python.analysis.indexing": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.logLevel": "Information",
  "python.analysis.stubPath": "typings",

  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": [
    "--target-version",
    "py38",
    "--fast",
  ],

  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.maxNumberOfProblems": 1000,
  "python.linting.ignorePatterns": [
    "**/site-packages/**/*.py",
    ".vscode/*.py",
    ".venv/**/*",
  ],

  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8heavened",
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8CategorySeverity.W": "Warning",
  "python.linting.flake8Args": [],

  "python.linting.banditEnabled": true,
  "python.linting.banditPath": "bandit",
  "python.linting.banditArgs": [],

  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "mypy",
  "python.linting.mypyArgs": [
    "--namespace-packages",
  ],

  "python.linting.pydocstyleEnabled": true,
  "python.linting.pydocstylePath": "pydocstyle",
  "python.linting.pydocstyleArgs": [],

  "python.linting.pylamaEnabled": false,
  "python.linting.pylamaPath": "pylama",
  "python.linting.pylamaArgs": [],

  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": false,
  "python.terminal.executeInFileDir": false,
  "python.terminal.launchArgs": [],

  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal",
      "args": [
        "-c",
        "poetry install && bash",
      ],
    },
    "zsh": {
      "path": "zsh",
      "icon": "terminal",
      "args": [
        "-c",
        "poetry install && zsh",
      ],
    },
  },

  "tabnine.disable_file_regex": ["*"],

  "todo-tree.filtering.ignoreGitSubmodules": true,
  "todo-tree.filtering.includeHiddenFiles": true,
  "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
  "todo-tree.tree.buttons.groupByTag": false,
  "todo-tree.tree.buttons.reveal": false,
  "todo-tree.filtering.excludeGlobs": [
    "**/env",
    "**/venv"
  ],

  "[json][jsonc]": {
    "editor.formatOnSave": false
  },

  "[python]": {
    "editor.formatOnPaste": false
  },

}
